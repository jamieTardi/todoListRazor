@page
@model todoListRazor.Pages.TodoList.IndexModel
@{
}

<div class="container">
    <div class="title-container">
    <h1>Todo List made in .NET with SQL DB</h1>
    </div>

    <div class="todo-container">
       @{ if (Model.Todos.Count() > 0)
           {
               <table class="table table-dark">
                   <thead>
                       <tr>
                           <th scope="col">#</th>
                           <th scope="col">First</th>
                           <th scope="col">Last</th>
                           <th scope="col">Handle</th>
                       </tr>
                   </thead>
                   <tbody>
                       @{ foreach (var todo in Model.Todos)
                           {
                       <tr>
                           <th scope="row">@Html.DisplayFor(m => todo.Id)</th>
                           <td>@Html.DisplayFor(m => todo.TodoItem)</td>
                           <td><button class="btn btn-success" asp-page="EditTodo">Edit</button></td>
                           <td><button class="btn btn-danger">Delete</button></td>
                       </tr>
                               }
                           }
                   </tbody>
               </table>
           }
           else
           {
               <h1>No Books in the DB</h1>
           }
                       
       }
        <div>
            <a class="btn btn-success" asp-page="CreateTodo">Create New Todo</a>
        </div>
    </div>
</div>